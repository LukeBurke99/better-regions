{
	"name": "better-regions",
	"publisher": "burke-development",
	"displayName": "Better Regions",
	"description": "More control over region blocks",
	"repository": {
		"type": "git",
		"url": "https://github.com/LukeBurke99/better-regions"
	},
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.103.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished",
		"onLanguage:javascript",
		"onLanguage:typescript",
		"onLanguage:json",
		"onLanguage:python",
		"onLanguage:csharp",
		"onLanguage:cpp",
		"onLanguage:java",
		"onLanguage:markdown",
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Better Regions",
			"properties": {
				"betterRegions.enableForAllFiles": {
					"type": "boolean",
					"default": true,
					"description": "Run Better Regions for all files, except those in 'Disabled Files'."
				},
				"betterRegions.enabledFiles": {
					"type": "array",
					"default": [],
					"items": {
						"type": "string"
					},
					"markdownDescription": "List of language IDs to enable when 'Enable For All Files' is false. Example: ['typescript','javascript','python'].",
					"scope": "window"
				},
				"betterRegions.disabledFiles": {
					"type": "array",
					"default": [],
					"items": {
						"type": "string"
					},
					"markdownDescription": "List of language IDs to exclude when 'Enable For All Files' is true. Example: ['markdown','plaintext'].",
					"scope": "window"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "pnpm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "pnpm run compile && pnpm run lint",
		"lint": "eslint src",
		"test": "mocha \"out/test/**/*.test.js\"",
		"test:e2e": "vscode-test"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.34.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "22.x",
		"@types/vscode": "^1.103.0",
		"@typescript-eslint/eslint-plugin": "^8.39.0",
		"@typescript-eslint/parser": "^8.39.0",
		"@vscode/test-cli": "^0.0.11",
		"@vscode/test-electron": "^2.5.2",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-unicorn": "^60.0.0",
		"globals": "^16.3.0",
		"mocha": "^10.7.3",
		"prettier": "^3.6.2",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.41.0"
	},
	"packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748"
}
